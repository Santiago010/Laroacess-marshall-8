<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/target_info_employee"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="140dp"
    android:background="@android:color/transparent"
    android:longClickable="false"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="900dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/target_message"
            android:orientation="horizontal"
            android:padding="34dp">

            <ImageView
                android:id="@+id/image_employee"
                android:layout_width="@dimen/text_icon_image_side_length"
                android:layout_height="@dimen/text_icon_image_side_length"
                android:layout_marginHorizontal="32dp"
                android:layout_marginVertical="16dp"
                tools:srcCompat="@tools:sample/avatars" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="450dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/text_icon_background"
                    android:padding="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nombre:"
                        android:textColor="@color/color_texts"
                        android:textSize="32dp" />

                    <EditText
                        android:id="@+id/name_employee"
                        style="@style/MyEditTextStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:editable="false"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:textColor="@color/color_texts"
                        android:textSize="32dp"
                        tools:text="Elliot" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="450dp"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="16dp"
                    android:background="@drawable/text_icon_background"
                    android:padding="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Apellido:"
                        android:textColor="@color/color_texts"
                        android:textSize="32dp" />

                    <EditText
                        android:id="@+id/lastName_employee"
                        style="@style/MyEditTextStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:editable="false"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:textColor="@color/color_texts"
                        android:textSize="32dp"
                        tools:text="Alderson" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="450dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/text_icon_background"
                    android:padding="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DNI:"
                        android:textColor="@color/color_texts"
                        android:textSize="32dp" />

                    <EditText
                        android:id="@+id/dni_employee"
                        style="@style/MyEditTextStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:editable="false"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:textColor="@color/color_texts"
                        android:textSize="32dp"
                        tools:text="F23FQWD23" />


                </LinearLayout>

                <TextView
                    android:id="@+id/message_auth_employee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="16dp"
                    android:padding="8dp"
                    android:textSize="22sp"
                    tools:text="AUTENTICACIÓN EXITOSA" />
            </LinearLayout>


        </LinearLayout>

        <Button
            android:id="@+id/btn_back_e"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="16dp"
            android:background="@drawable/background_back_btn"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:text="atrás"
            android:textSize="34sp" />
    </LinearLayout>


</LinearLayout>