<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/target_message_qr"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="120dp"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="900dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/target_message"
            android:orientation="horizontal"
            android:padding="34dp">

            <ImageView
                android:layout_width="@dimen/text_icon_image_side_length"
                android:layout_height="@dimen/text_icon_image_side_length"
                android:layout_margin="16dp"
                android:src="@drawable/ic_qricon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="80dp"
                android:text="Por favor coloque el \ncódigo QR en el sensor"
                android:textAlignment="gravity"
                android:textSize="40sp" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_back_m"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="16dp"
            android:background="@drawable/background_back_btn"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:text="atrás"
            android:textSize="34sp" />
    </LinearLayout>


</LinearLayout>