<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:id="@+id/target_new_finger"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/we"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="32dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/text_icon_background"
            android:padding="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre:"
                android:textColor="@color/color_texts"
                android:textSize="32dp" />

            <EditText
                android:id="@+id/name_employee_n_f"
                style="@style/MyEditTextStyle"
                android:layout_width="445dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:editable="false"
                android:ems="10"
                android:inputType="textPersonName"
                android:textColor="@color/color_texts"
                android:textSize="32dp"
                tools:text="Elliot" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="16dp"
            android:background="@drawable/text_icon_background"
            android:padding="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Apellido:"
                android:textColor="@color/color_texts"
                android:textSize="32dp" />

            <EditText
                android:id="@+id/lastName_employee_n_f"
                style="@style/MyEditTextStyle"
                android:layout_width="445dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPersonName"
                android:textColor="@color/color_texts"
                android:textSize="32dp"
                tools:text="Alderson" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/text_icon_background"
            android:padding="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DNI:"
                android:textColor="@color/color_texts"
                android:textSize="32dp" />

            <EditText
                android:id="@+id/dni_employee_n_f"
                style="@style/MyEditTextStyle"
                android:layout_width="510dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPersonName"
                android:textColor="@color/color_texts"
                android:textSize="32dp"
                tools:text="F23FQWD23" />


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <include tools:layout_editor_absoluteX="0dp" layout="@layout/component_fp1" />
            <include tools:layout_editor_absoluteX="0dp" layout="@layout/component_fp2" />
        </LinearLayout>


        <Button
            android:id="@+id/btn_back_s"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_weight="1"
            android:background="@drawable/background_back_btn"
            android:text="Guardar"
            android:textSize="22sp" />

    </LinearLayout>
</LinearLayout>